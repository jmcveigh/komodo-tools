{
  "keyboard_shortcut": "", 
  "name": "Guess a Number (High / Low) [2]", 
  "value": [
    "use strict;", 
    "use integer;", 
    "", 
    "my $number_in_mind = int(rand 100 + 1);", 
    "my $user_input = \"\";", 
    "my $verbose = 0;", 
    "", 
    "print STDERR \"DEBUG : $number_in_mind selected at random.\\n\" if $verbose;", 
    "print STDERR \"WARN : quiet.\\n\" if !$verbose;", 
    "print STDERR \"WARN : verbose.\\n\" if $verbose;", 
    "", 
    "until($user_input eq $number_in_mind)", 
    "{", 
    "  $user_input = <STDIN>;", 
    "  chomp $user_input;", 
    "  if(!$user_input || $user_input =~ /quit/i || $user_input =~ /exit/i) {", 
    "    last;", 
    "  }", 
    "  elsif($user_input < $number_in_mind) {", 
    "    print \"Too low\\n\";", 
    "  } elsif($user_input > $number_in_mind) {", 
    "    print \"Too high\\n\";", 
    "  }", 
    "}!@#_currentPos!@#_anchor"
  ], 
  "set_selection": "false", 
