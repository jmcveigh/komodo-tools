  "name": "Testing for a Valid Pattern", 
  "value": [
    "do {", 
    "\tprint \"Pattern? \";", 
    "\tchomp($pat = <>);", 
    "\teval { \"\" =~ /$pat/ };", 
    "\twarn \"INVALID PATTERN $@\" if $@;", 
    "} while $@;", 
    "", 
    "# OR ..", 
    "sub is_valid_pattern {", 
    "\tmy $pat = shift;", 
    "\teval { \"\" =~ /$pat/ };", 
    "\treturn $@ ? 0 : 1;", 
    "}", 
    "", 
    "# OR ..", 
    "sub is valid pattern {", 
    "\tmy $pat = shift;", 
    "\treturn eval { \"\" =~ /$pat/; 1; } || 0;", 
    "}!@#_currentPos!@#_anchor"
  ], 
