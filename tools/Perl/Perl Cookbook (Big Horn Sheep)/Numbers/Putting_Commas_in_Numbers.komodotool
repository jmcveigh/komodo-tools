  "name": "Putting Commas in Numbers", 
  "value": [
    "sub commify {", 
    "\tmy $text = reverse $_[0];", 
    "\t$text =~ s/(\\d\\d\\d)(?=\\d)(?!\\d*\\.)/$1/g;", 
    "\treturn scalar reverse $text;", 
    "}!@#_currentPos!@#_anchor"
